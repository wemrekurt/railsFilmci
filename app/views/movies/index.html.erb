<% content_for :title, "Filmler - " %>
<h4>Film Listesi</h4>
<div class="row">
<% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to (image_tag movie.image.url(:medium)), movie %>

          <div class="caption">
            <h3><%= link_to movie.title, movie %></h3>
            <p><%= movie.description.truncate_words(6) %></p>
          </div>
        </div>
      </div>
<% end %>
</div>
